{
  "name": "chumo-task-management-tool",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "lefthook install",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --fix",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "create-user": "bun scripts/create-user.ts",
    "create-sample-tasks": "bun scripts/create-sample-tasks.ts",
    "delete-old-tasks": "bun scripts/delete-old-tasks.ts",
    "delete-old-projects": "bun scripts/delete-old-projects.ts",
    "functions:build": "cd functions && npm run build",
    "functions:deploy": "cd functions && npm run build && firebase deploy --only functions",
    "functions:deploy:timer": "cd functions && npm run build && firebase deploy --only functions:startTimer,functions:stopTimer",
    "functions:deploy:drive": "cd functions && npm run build && firebase deploy --only functions:createDriveFolder",
    "functions:deploy:github": "cd functions && npm run build && firebase deploy --only functions:createFireIssue",
    "functions:deploy:chat": "cd functions && npm run build && firebase deploy --only functions:createGoogleChatThread",
    "functions:deploy:reports": "cd functions && npm run build && firebase deploy --only functions:getTimeReport,functions:exportTimeReportCSV",
    "mcp:serena": "uvx --from git+https://github.com/oraios/serena serena start-mcp-server"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.5",
    "@mui/material": "^7.3.5",
    "@rive-app/react-canvas": "^4.26.1",
    "@tanstack/react-query": "^5.0.0",
    "@tiptap/extension-image": "^3.15.3",
    "@tiptap/extension-link": "^3.15.3",
    "@tiptap/extension-mention": "^3.15.3",
    "@tiptap/pm": "^3.15.3",
    "@tiptap/react": "^3.15.3",
    "@tiptap/starter-kit": "^3.15.3",
    "@tiptap/suggestion": "^3.15.3",
    "date-fns": "^2.30.0",
    "dompurify": "^3.3.1",
    "firebase": "^10.7.0",
    "firebase-admin": "^13.6.0",
    "googleapis": "^128.0.0",
    "next": "^16.0.10",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zod": "^3.22.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@evilmartians/lefthook": "^2.0.16",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^20.19.24",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-next": "^16.0.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-oxlint": "^1.28.0",
    "eslint-plugin-react": "^7.37.5",
    "oxfmt": "^0.27.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  }
}
