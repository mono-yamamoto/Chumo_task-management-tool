rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // お問い合わせの画像アップロード
    match /contacts/{userId}/{allPaths=**} {
      // 読み取り: 認証済みユーザー全員が可能
      allow read: if request.auth != null;
      // 書き込み: 認証済みユーザーが自分のフォルダにのみアップロード可能
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // コメント画像のアップロード
    match /comments/{projectType}/{taskId}/{fileName} {
      // 読み取り: 認証済みユーザー全員が可能
      allow read: if request.auth != null;
      // 書き込み: 認証済みユーザーが画像をアップロード可能
      // ファイルサイズ制限: 5MB以下
      // ファイル形式制限: 画像のみ
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
    }
  }
}

